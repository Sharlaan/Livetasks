{
  "name": "webapp",
  "version": "2.0.1",
  "description": "Static server to serve the client-side interface",
  "keywords": [
    "TODO",
    "tchat",
    "websocket",
    "vanilla",
    "MVVM"
  ],
  "author": "Sharlaan <raphael.morineau@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "spostinstall": "yarn start:prod",
    "start": "nodemon src/index",
    "start:prod": "cross-env NODE_ENV=production run-s cleandist build runprod",
    "runprod": "pm2 start dist/index.js --name \"livetasks-webapp\"",
    "cleandist": "del-cli dist/*",
    "build": "babel src/ -d dist -s --copy-files",
    "lint": "eslint src"
  },
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.1.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "standard": "^11.0.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "> 3%"
            ]
          },
          "modules": "commonjs",
          "debug": false
        }
      ]
    ],
    "plugins": [
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint"
  }
}
